{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./",  // Set the baseUrl to your source folder
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@contexts/*": ["src/contexts/*"],
      "@store/*": ["src/store/*"],
      "@layouts/*": ["src/layouts/*"],
      "@settings/*": ["src/settings/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src"], // Ensure the src folder is included
  "exclude": ["node_modules"] // Exclude unnecessary directories
}
